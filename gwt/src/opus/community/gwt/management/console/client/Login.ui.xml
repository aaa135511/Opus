<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="resources/ManagementConsole.css" />
	<g:DockLayoutPanel ui:field='loginPanel' unit='EM' styleName="{style.loginPanel}">
		<g:north size='2.5'>
			<g:FlowPanel>
				<g:Label styleName="{style.loginElement}">Username:</g:Label>
				<g:TextBox ui:field="usernameTextBox" name='username' styleName="{style.loginTextBox}"></g:TextBox>
			</g:FlowPanel>
		</g:north>
		<g:north size='2.5'>
			<g:FlowPanel>
				<g:Label styleName="{style.loginElement}">Password:</g:Label>
				<g:PasswordTextBox ui:field="passwordTextBox" name='password' styleName="{style.loginTextBox}"></g:PasswordTextBox>
			</g:FlowPanel>
		</g:north>
		<g:north size='2'>
			<g:Button ui:field="loginButton" styleName="{style.loginButton}">Login</g:Button>
		</g:north>
		<g:north size='2'>
			<g:Hidden ui:field="csrftoken"></g:Hidden>
		</g:north>
	</g:DockLayoutPanel>
</ui:UiBinder> 