<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="resources/ManagementConsole.css" type="opus.gwt.management.console.client.resources.ManagementConsoleCss.ManagementConsoleStyle"/>
	<g:RootLayoutPanel styleName="{style.mainPanel}">
		<g:layer>
			<g:HTML>
				<link href=' http://fonts.googleapis.com/css?family=Droid+Serif' rel='stylesheet' type='text/css'/>
			</g:HTML>
		</g:layer>
		<g:layer>
			<g:DockLayoutPanel ui:field='subMainPanel' styleName="{style.subMainPanel}" unit='PCT'>
				<g:north size='3'>
					<g:FlowPanel ui:field="topMenuFlowPanel" styleName="{style.topMenuPanel}">
						<g:Button ui:field="dashboardsButton" visible='false' styleName="{style.topDashboardButton}">My Projects</g:Button>
						<g:Button ui:field="deployNewButton" visible='false' styleName="{style.topDeployNewButton}">Deploy New Project</g:Button>
						<g:Button ui:field="authenticationButton" visible='false' styleName="{style.authenticationButton}">Logout</g:Button>
						<g:Button ui:field="loggedInUserButton" visible='false' styleName="{style.loggedInAsLabel}"></g:Button>
					</g:FlowPanel>
				</g:north>
				<g:north size='8'>
					<g:Label ui:field='titleBarLabel' styleName="{style.titleBar}"> 
					</g:Label>
				</g:north>
				<g:west size ='10.1'>
					<g:FlowPanel ui:field='navigationMenuPanel' styleName="{style.navigationMenu}">
					</g:FlowPanel>
				</g:west>
				<g:east size='90'>	
					<g:DeckPanel ui:field="mainDeckPanel" styleName="{style.mainDeckPanel}">
					</g:DeckPanel>
				</g:east>		
			</g:DockLayoutPanel>
		</g:layer>
	</g:RootLayoutPanel>
</ui:UiBinder> 