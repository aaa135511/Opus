<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
		.AppBrowser {
			width: 100%;
			height: 100%;
			margin-left: auto;
			margin-right: auto;
			margin-top: 20px;
			border: solid orange 2px;
			padding: 10px;
			-webkit-border-radius: 10px;
        	-moz-border-radius: 10px;
        	background: white;
		}
		.appInfo {
			padding-left: 20px;
		}
		.AppActionButtonHidden {
			display: none;
		}
		.DeployButtonHidden {
			position: absolute;
			bottom: 15px;
			right: 10px;
			width: 60px;
			height: 40px;	
		}
		.RemoveButton {
			position: absolute;
			bottom: 70px;
			right: 10px;
			width: 60px;
			height: 40px;
			color: red;
		}
		.DeployListFlowPanel {
			max-height: 100px;
			width: auto;
			display: inline-block;
		}
		.RootLayoutPanel{
			margin: 0;
			padding: 0;
		}
		.navigationLabel1 {
			margin-top: -37px;
			margin-left: 10px;
			background: #CED5F5;
			border: solid grey 1px;
			color: azure;
			width: 100px;
			float:left;
			padding: 3px;
			-webkit-border-radius: 10px 10px 0 0;
		    -moz-border-radius: 10px 10px 0 0; 
		    text-align: center;
		}
		.navigationLabel2 {
			margin-top: -37px;
			margin-left: 120px;
			background: #CED5F5;
			border: solid grey 1px;
			color: azure;
			width: 100px;
			float:left;
			padding: 3px;
			-webkit-border-radius: 10px 10px 0 0;
		    -moz-border-radius: 10px 10px 0 0;
		    text-align: center;
		}
		.navigationLabel1Active {
			margin-top: -35px;
			margin-left: 10px;
			background: grey;
			border: solid grey 1px;
			color: azure;
			width: 100px;
			float:left;
			padding: 3px;
			-webkit-border-radius: 10px 10px 0 0;
        	-moz-border-radius: 10px 10px 0 0;
		}
		.navigationLabel2Active {
			margin-top: -35px;
			margin-left: 120px;
			background: grey;
			border: solid grey 1px;
			color: azure;
			width: 100px;
			float:left;
			padding: 3px;
			-webkit-border-radius: 10px 10px 0 0;
        	-moz-border-radius: 10px 10px 0 0;
		}
	</ui:style>
	
	<g:HTMLPanel ui:field="topHTMLPanel" styleName='{style.AppBrowser}'>
		<g:Label ui:field="allAppsLabel" styleName="{style.navigationLabel1}">All</g:Label>
		<g:Label ui:field="featuredAppsLabel" styleName="{style.navigationLabel2}">Featured</g:Label>
			<div class="AppList">
				<div class="ListGrid" id="ListGrid">
					<g:DeckPanel ui:field="mainDeckPanel">
					
					</g:DeckPanel>			
				</div>
			</div>
			<div class="AppInfo">
				<g:HTML ui:field="AppInfo" styleName='{style.appInfo}'></g:HTML>
				<br/>
				<g:VerticalPanel ui:field="VersionInfo" styleName='{style.appInfo}'>
				
				</g:VerticalPanel>
				<g:Button ui:field="AppActionButton" styleName='{style.AppActionButtonHidden}'>
				</g:Button>
			</div>
			<div class="DeployList">
				<g:FlowPanel ui:field="DeployListFlowPanel" styleName='{style.DeployListFlowPanel}'>
					
				</g:FlowPanel>
				<g:Button ui:field="RemoveButton" styleName='{style.RemoveButton}' text="Remove"/>
				<g:Button ui:field="DeployButton" styleName='{style.DeployButtonHidden}' text="Next">
				</g:Button>
			</div>
	</g:HTMLPanel>

</ui:UiBinder> 