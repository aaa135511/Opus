<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="../resources/ProjectBuilder.css" type="opus.gwt.management.console.client.resources.ProjectBuilderCss.ProjectBuilderStyle"/>
	<g:HTMLPanel styleName="{style.innerSubMainPanel}">
		<g:DockLayoutPanel unit='PCT' styleName="{style.topSubMainPanel}">
			<g:north size='7'>
				<g:FlowPanel styleName="{style.pagePanel}">
					<g:Label  styleName="{style.pageSteps}">
						Step 1 of 5:
					</g:Label>
					<g:Label  styleName="{style.pageTitle}">
						Add Applications
					</g:Label>
				</g:FlowPanel>
			</g:north>
			<g:north size='93'>
				<g:DockLayoutPanel unit='PCT' styleName='{style.addAppsMainPanel}'>
					<g:north size='6'>
						<g:DockLayoutPanel unit='PCT' styleName='{style.searchDockLayout}'>
							<g:west size="100">
								<g:FlowPanel styleName="{style.searchPanel}">
									<g:TextBox ui:field="searchBox" styleName="{style.searchBox}"></g:TextBox>
									<g:Button ui:field="searchButton" text="Search" styleName="{style.searchButton}" />
									<g:ListBox ui:field="fieldList" styleName="{style.listBox}"/>
									<g:Button ui:field="addExistingProjectButton" text="Enter Token From Community Site" styleName="{style.addExistingProjectButton}"></g:Button>
								</g:FlowPanel>
							</g:west>
						</g:DockLayoutPanel>
					</g:north>
					<g:north size="86">
						<g:DockLayoutPanel unit='PCT'>
							<g:west size='70'>
								<g:DockLayoutPanel unit='PCT'>
									<g:west size='75'>
										<g:DockLayoutPanel unit='PCT'> 
											<g:north size='90'>
												<g:ScrollPanel ui:field="appListScrollPanel" styleName="{style.leftAppScrollPanel}">
													<g:FlexTable ui:field="appListFlexTable" styleName="{style.appFlexTable}"></g:FlexTable>	
												</g:ScrollPanel>
											</g:north>
										</g:DockLayoutPanel>
									</g:west>
									<g:east size='25'>
										<g:DockLayoutPanel unit='PCT'> 
											<g:north size='82'>
												<g:ScrollPanel ui:field="deployListScrollPanel" styleName="{style.addedAppsPanel}">
													<g:FlexTable ui:field="deployListFlexTable"></g:FlexTable>
												</g:ScrollPanel>
											</g:north>
											<g:north size='10'>
												<g:Button ui:field="addOtherButton" text="Add Other Application" styleName="{style.searchButton}"/>				
											</g:north>
										</g:DockLayoutPanel>
									</g:east>
								</g:DockLayoutPanel>
							</g:west>
							<g:west size='30'>
								<g:DockLayoutPanel styleName="{style.addAppsInfoPanel}" unit='PCT'>
									<g:north size='90'>
										<g:ScrollPanel ui:field='infoScrollPanel' styleName="{style.infoScrollPanel}">
										<g:HTML>
										Please use the list on the left to select which applications you wish to include in your project.
										<p>If an application you wish to include does not appear in the list, use "Add Other Application" button to add an application from a GIT repository.</p>
										</g:HTML>
										</g:ScrollPanel>
									</g:north>		
								</g:DockLayoutPanel>
							</g:west>						
						</g:DockLayoutPanel>
					</g:north>

					<g:north size='5'>
						<g:DockLayoutPanel unit='PCT' styleName="{style.buttonPanel}">
							<g:west size='45'>
								<g:HTML></g:HTML>
							</g:west>
							<g:west size='15'>
								<g:Button ui:field="previousButton" text="Previous" styleName="{style.stepsButton}"/>
							</g:west>
							<g:west size='2'>
								<g:HTML></g:HTML>
							</g:west>
							<g:west size='15'>
								<g:Button ui:field="nextButton" text="Next" styleName="{style.stepsButton}"/>
							</g:west>
						</g:DockLayoutPanel>
					</g:north>					
				</g:DockLayoutPanel>
			</g:north>
		</g:DockLayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder> 