<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="../resources/ProjectBuilder.css"/>
	<g:HTMLPanel styleName="{style.innerSubMainPanel}">
		<g:DockLayoutPanel unit='PCT' styleName="{style.topSubMainPanel}">
			<g:north size='7'>
				<g:FlowPanel styleName="{style.pagePanel}">
					<g:Label  styleName="{style.pageSteps}">
						Step 2 of 5:
					</g:Label>
					<g:Label  styleName="{style.pageTitle}">
						Project Options
					</g:Label>
				</g:FlowPanel>
			</g:north>
			<g:north size='93'>
				<g:DockLayoutPanel unit='PCT' styleName="{style.addAppsMainPanel}"> 
					<g:north size="94">
						<g:DockLayoutPanel unit='PCT'>
							<g:west size='75'>
								<g:DockLayoutPanel unit='EM' ui:field='projectOptionsPanel' styleName="{style.form}">
									<g:north size ='3'>
										<g:HTMLPanel>
											<u>Superuser Setup</u>
											<br>Superuser setup is not required.  Please see notes in the right hand panel.</br>
										</g:HTMLPanel>
									</g:north>
									<g:north size='2'>
										<g:FlowPanel>
											<g:Label styleName='{style.configParameter}'>Username</g:Label>
											<g:TextBox name='superusername' ui:field='usernameTextBox' styleName='{style.configParameter}'/>
										</g:FlowPanel>
									</g:north>
									<g:north size='2'>
										<g:FlowPanel>
											<g:Label styleName='{style.configParameter}'>Password</g:Label>
											<g:PasswordTextBox name='superpassword' ui:field='passwordTextBox' styleName='{style.configParameter}'/>
										</g:FlowPanel>
									</g:north>
									<g:north size='2'>
										<g:FlowPanel>
											<g:Label styleName='{style.configParameter}'>Password Confirm</g:Label>
											<g:PasswordTextBox name='superpasswordconfirm' ui:field='passwordConfirmTextBox' styleName='{style.configParameter}'/>
										</g:FlowPanel>
									</g:north>
									<g:north size='2'>
										<g:FlowPanel>
											<g:Label styleName='{style.configParameter}'>Email</g:Label>
											<g:TextBox name ='superemail' ui:field='emailTextBox' styleName='{style.configParameter}'/>
										</g:FlowPanel>
									</g:north>
									<g:north size='2'>
										<g:FlowPanel>
											<g:Label styleName="{style.configParameter}">Django Admin Interface?</g:Label>
											<g:CheckBox name='admin' ui:field="adminCheckBox" styleName="{style.configParameter}"></g:CheckBox>
										</g:FlowPanel>
									</g:north>
									<g:north size='2'>
										<g:FlowPanel>
											<g:Label styleName="{style.configParameter}">Django Admin Interface?</g:Label>
											<g:ListBox ui:field="authenticationListBox" styleName="{style.configParameter}">
												
											</g:ListBox>
										</g:FlowPanel>
									</g:north>
								</g:DockLayoutPanel>
							</g:west>
							<g:west size='25'>
								<g:DockLayoutPanel styleName="{style.infoPanel}" unit='PCT'>
									<g:north size='90'>
										<g:ScrollPanel ui:field="deployListScrollPanel" styleName="{style.infoScrollPanel}">
											<g:FlowPanel>
											<g:HTML>
												<font color='red'>NOTE: Creating a Superuser will bypass all permission checks.</font>
												<p><font color='red'>NOTE: Django Admin Interface requires the creation of a superuser.</font></p>
												<p>Username - Enter valid username for DJango Admin Superuser</p>
												<p>Password - valid password for Superuser</p>
												<p>Email - contact email address for Superuser</p>
												<p>Django Admin Interface - Choose 'Yes' to enable the Django Admin interface</p>
											</g:HTML>
											</g:FlowPanel>
										</g:ScrollPanel>
									</g:north>		
								</g:DockLayoutPanel>
							</g:west>						
						</g:DockLayoutPanel>
					</g:north>
					<g:north size='5'>
						<g:DockLayoutPanel unit='PCT' styleName="{style.buttonPanel}">
							<g:west size='45'>
								<g:HTML></g:HTML>
							</g:west>
							<g:west size='15'>
								<g:Button ui:field="previousButton" text="Previous" styleName="{style.stepsButton}"/>
							</g:west>
							<g:west size='2'>
								<g:HTML></g:HTML>
							</g:west>
							<g:west size='15'>
								<g:Button ui:field="nextButton" text="Next" styleName="{style.stepsButton}"/>
							</g:west>
						</g:DockLayoutPanel>
					</g:north>					
				</g:DockLayoutPanel>
			</g:north>

			
		</g:DockLayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder> 