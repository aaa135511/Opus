<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="../resources/ProjectOptions.css"/>
	
	<g:SimplePanel>			
		<g:HTMLPanel ui:field='projectOptionsPanel' styleName='{style.optionsPanel}'>
			<g:HTMLPanel styleName="{style.fieldWrapper}">
				<h1>Superuser Setup</h1>
				Superuser setup is required if you wish to be able to assign local groups and permissions.
			</g:HTMLPanel>
			<g:HTMLPanel styleName="{style.formWrapper}">
				<g:HTMLPanel styleName="{style.fieldWrapper}">
					<g:HTMLPanel styleName="{style.field}">
						<label class='{style.fieldLabel}'>Username</label>
						<g:TextBox name='superusername' ui:field='usernameTextBox'/>
					</g:HTMLPanel>
					<g:HTMLPanel styleName="{style.tooltip}">
						<g:HTMLPanel styleName="{style.tooltip-left}" />
						<g:HTMLPanel styleName="{style.tooltip-right}">
							<g:PopupPanel ui:field="tooltip">
								<g:HTMLPanel>
									This is a tooltip and it contains tons of information!
									Blah blah blah blah.
								</g:HTMLPanel>
							</g:PopupPanel>
						</g:HTMLPanel>
					</g:HTMLPanel>
				</g:HTMLPanel>
				<g:HTMLPanel styleName="{style.fieldWrapper}">
					<g:HTMLPanel styleName="{style.field}">
						<label class='{style.fieldLabel}'>Password</label>
						<g:PasswordTextBox name='superpassword' ui:field='passwordTextBox'/>
					</g:HTMLPanel>
				</g:HTMLPanel>
				<g:HTMLPanel styleName="{style.fieldWrapper}">
					<g:HTMLPanel styleName="{style.field}">
						<label class='{style.fieldLabel}' >Password Confirm</label>
						<g:PasswordTextBox name='superpasswordconfirm' ui:field='passwordConfirmTextBox' />
					</g:HTMLPanel>
				</g:HTMLPanel>
				<g:HTMLPanel styleName="{style.fieldWrapper}">
					<g:HTMLPanel styleName="{style.field}">
						<label class='{style.fieldLabel}'>Email</label>
						<g:TextBox name ='superemail' ui:field='emailTextBox' />
					</g:HTMLPanel>
				</g:HTMLPanel>
				<g:HTMLPanel styleName="{style.fieldWrapper}">
					<u>How your users will authenticate</u>
				</g:HTMLPanel>
				<g:HTMLPanel styleName="{style.fieldWrapper}">
					<label class="{style.fieldLabel}">Identity Provider:</label>
					<g:ListBox name="idprovider" ui:field="idProvider" styleName="{style.fieldLabel}" />
				</g:HTMLPanel>
			</g:HTMLPanel>
			<g:DockLayoutPanel unit='PCT'>
				<g:west size='45'>
					<g:HTML></g:HTML>
				</g:west>
				<g:west size='15'>
					<g:Button ui:field="previousButton" text="Previous"/>
				</g:west>
				<g:west size='2'>
					<g:HTML></g:HTML>
				</g:west>
				<g:west size='15'>
					<g:Button ui:field="nextButton" text="Next"/>
				</g:west>
			</g:DockLayoutPanel>
		</g:HTMLPanel>
	</g:SimplePanel>

</ui:UiBinder> 