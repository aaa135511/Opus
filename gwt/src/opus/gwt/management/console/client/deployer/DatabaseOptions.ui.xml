<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="../resources/ProjectBuilder.css"/>
	
	<g:SimplePanel>
		<g:HTMLPanel ui:field="databaseOptionsPanel" styleName="{style.innerSubMainPanel}">
			<g:FlowPanel>
				<g:Label >DB Engine</g:Label>
				<g:ListBox name="dbengine" ui:field='dbengineListBox' >
				</g:ListBox>
			</g:FlowPanel>
			<g:HTMLPanel ui:field="dbFieldsPanel">
				<g:FlowPanel>
					<g:Label >Name</g:Label>
					<g:TextBox name="dbname" ui:field='nameTextBox' />
				</g:FlowPanel>
				<g:FlowPanel>
					<g:Label >Password</g:Label>
					<g:PasswordTextBox name="dbpassword" ui:field='passwordTextBox' />
				</g:FlowPanel>
				<g:FlowPanel>
					<g:Label >Host</g:Label>
					<g:TextBox name="dbhost" ui:field='hostTextBox' />
				</g:FlowPanel>
				<g:FlowPanel>
					<g:Label >Port</g:Label>
					<g:TextBox name="dbport" ui:field='portTextBox' />
				</g:FlowPanel>
			</g:HTMLPanel>
			<g:HTMLPanel>	
				<g:Button ui:field="previousButton" text="Previous" />
				<g:Button ui:field="nextButton" text="Next" />
			</g:HTMLPanel>
		</g:HTMLPanel>
	</g:SimplePanel>
</ui:UiBinder> 