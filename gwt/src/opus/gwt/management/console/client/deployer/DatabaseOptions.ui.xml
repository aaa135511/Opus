<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:t="urn:import:opus.gwt.management.console.client.tools">
	<ui:style src="../resources/ProjectBuilder.css"/>
	<ui:style src="../resources/ProjectDeployer.css" field="form" type="opus.gwt.management.console.client.resources.ProjectDeployerCss.ProjectDeployerStyle"/>
	
	<g:SimplePanel>
		<g:HTMLPanel ui:field="databaseOptionsPanel" >
			<t:TooltipPanel ui:field="active" />
			<g:HTMLPanel styleName="{form.header}">
				<g:HTMLPanel styleName="{form.insetType}">
					<h1>Database Options</h1>
				</g:HTMLPanel>
			</g:HTMLPanel>
			<g:HTMLPanel styleName="{form.fieldWrapper}">
				<h1>Database Selection</h1>
				Select an appropriate database engine for your project.
			</g:HTMLPanel>
			<g:HTMLPanel ui:field="dbFieldsPanel">
				<g:HTMLPanel styleName="{form.formWrapper}">
					<g:HTMLPanel styleName="{form.fieldWrapper}">
						<g:HTMLPanel styleName="{form.field}">
							<label class='{form.fieldLabel}'>DB Engine</label>
							<g:ListBox name="dbengine" ui:field='dbengineListBox' />
						</g:HTMLPanel>
					</g:HTMLPanel>
					<g:HTMLPanel styleName="{form.fieldWrapper}">
						<g:HTMLPanel styleName="{form.field}">
							<label class='{form.fieldLabel}'>Name</label>
							<g:TextBox name="dbname" ui:field='nameTextBox' />
						</g:HTMLPanel>
					</g:HTMLPanel>
					<g:HTMLPanel styleName="{form.fieldWrapper}">
						<g:HTMLPanel styleName="{form.field}">
							<label class='{form.fieldLabel}'>Password</label>
							<g:PasswordTextBox name='dbpassword' ui:field='passwordTextBox'/>
						</g:HTMLPanel>
					</g:HTMLPanel>
					<g:HTMLPanel styleName="{form.fieldWrapper}">
						<g:HTMLPanel styleName="{form.field}">
							<label class='{form.fieldLabel}' >Host</label>
							<g:PasswordTextBox name='dbhost' ui:field='hostTextBox' />
						</g:HTMLPanel>
					</g:HTMLPanel>
					<g:HTMLPanel styleName="{form.fieldWrapper}">
						<g:HTMLPanel styleName="{form.field}">
							<label class='{form.fieldLabel}'>Port</label>
							<g:TextBox name='dbport' ui:field='portTextBox' />
						</g:HTMLPanel>
					</g:HTMLPanel>
					<g:HTMLPanel styleName="{form.buttons}">	
						<g:Button ui:field="previousButton" text="Previous" />
						<g:Button ui:field="nextButton" text="Next" />
					</g:HTMLPanel>
				</g:HTMLPanel>
			</g:HTMLPanel>
		</g:HTMLPanel>
	</g:SimplePanel>
</ui:UiBinder> 