<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="../resources/ProjectBuilder.css"/>
	
	<g:SimplePanel>
		<g:HTMLPanel styleName="{style.innerSubMainPanel}">
			<g:HTML>
				<u>Deployment Location Options</u>
			</g:HTML>
			<g:FlowPanel>
				<g:Label >Deploy as:</g:Label>
				<g:TextBox ui:field='projectNameTextBox' />
				<g:Label ui:field='baseUrlLabel' />
			</g:FlowPanel>
			<g:HTMLPanel>	
				<g:Button ui:field="previousButton" text="Previous" />
				<g:Button ui:field="nextButton" text="Next" />
			</g:HTMLPanel>
		</g:HTMLPanel>
	</g:SimplePanel>
</ui:UiBinder> 