<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="../resources/ProjectBuilder.css"/>
	<g:HTMLPanel styleName="{style.innerSubMainPanel}">
		<g:DockLayoutPanel unit='PCT' styleName="{style.topSubMainPanel}">
			<g:north size='7'>
				<g:FlowPanel styleName="{style.pagePanel}">
					<g:Label  styleName="{style.pageSteps}">
						Step 4 of 5:
					</g:Label>
					<g:Label  styleName="{style.pageTitle}">
						Deployment Options
					</g:Label>
				</g:FlowPanel>
			</g:north>
			<g:north size='93'>
				<g:DockLayoutPanel unit='PCT' styleName="{style.addAppsMainPanel}"> 
					<g:north size="94">
						<g:DockLayoutPanel unit='PCT'>
							<g:west size='80'>
									<g:DockLayoutPanel unit='EM' styleName="{style.form}">
										<g:north size='2'>
											<g:HTML>
												<u>Deployment Location Options</u>
											</g:HTML>
										</g:north>
										<g:north size='2'>
											<g:FlowPanel>
												<g:Label styleName="{style.configParameter}">Deploy as:</g:Label>
												<g:TextBox ui:field='projectNameTextBox' styleName="{style.configParameter}"></g:TextBox>
												<g:Label ui:field='baseUrlLabel' styleName="{style.configParameter}"></g:Label>
											</g:FlowPanel>
										</g:north>
										<g:north size='2'>
											<g:FlowPanel>
												<g:Label styleName="{style.configParameter}">Debug Mode:</g:Label>
												<g:CheckBox name="debug" ui:field='debugCheckBox' styleName="{style.configParameter}"></g:CheckBox>
											</g:FlowPanel>
										</g:north>
									</g:DockLayoutPanel>
							</g:west>
							<g:west size='20'>
								<g:DockLayoutPanel styleName="{style.infoPanel}" unit='PCT'>
									<g:north size='90'>
										<g:ScrollPanel ui:field="deployListScrollPanel" styleName="{style.infoScrollPanel}">
											<g:FlowPanel>
											<g:HTML>
												<p>Name used for deployment will serve as subdomain.</p>
												
											</g:HTML>
											</g:FlowPanel>
										</g:ScrollPanel>
									</g:north>		
								</g:DockLayoutPanel>
							</g:west>						
						</g:DockLayoutPanel>
					</g:north>
					<g:north size='5'>
						<g:DockLayoutPanel unit='PCT' styleName="{style.buttonPanel}">
							<g:west size='45'>
								<g:HTML></g:HTML>
							</g:west>
							<g:west size='15'>
								<g:Button ui:field="previousButton" text="Previous" styleName="{style.stepsButton}"/>
							</g:west>
							<g:west size='2'>
								<g:HTML></g:HTML>
							</g:west>
							<g:west size='15'>
								<g:Button ui:field="nextButton" text="Next" styleName="{style.stepsButton}"/>
							</g:west>
						</g:DockLayoutPanel>
					</g:north>					
				</g:DockLayoutPanel>
			</g:north>

			
		</g:DockLayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder> 