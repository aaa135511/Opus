<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="../resources/ProjectDashboard.css" />
	<g:HTMLPanel ui:field="mainDeleteProjectPanel" styleName="{style.innerSubMainPanel}">
		<g:DockLayoutPanel unit='PCT' styleName="{style.topSubMainPanel}">
			<g:north size='6'>
				<g:FlowPanel ui:field="titlePanel" styleName="{style.dashboardTitlePanel}">
					<g:Label  styleName="{style.pageTitle}">
						Delete Project
					</g:Label>
				</g:FlowPanel>
			</g:north>
			<g:west size='100'>
				<g:ScrollPanel ui:field="deleteProjectScrollPanel">
					<g:DockLayoutPanel unit='EM'>
						<g:north size='4'>
							<g:HTML>
								<p><font size='4' color='red'>WARNING: This action is irreversible and will permanently delete all project related files and configurations.</font></p>
							</g:HTML>
						</g:north>
						<g:north size='2'>
							<g:FlowPanel>
								<g:Button ui:field="deleteProjectButton" styleName="{style.searchButton}">Destroy Project</g:Button>
							</g:FlowPanel>
						</g:north>
					</g:DockLayoutPanel>
				</g:ScrollPanel>
			</g:west>
		</g:DockLayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder> 