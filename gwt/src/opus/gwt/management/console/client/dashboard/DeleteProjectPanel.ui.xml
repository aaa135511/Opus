<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="../resources/ProjectManager.css" />
	
	<g:SimplePanel>
		<g:HTMLPanel styleName="{style.dashboardMainPanel}">
			<g:FlowPanel ui:field="titlePanel" />
			<g:HTMLPanel styleName="{style.header}">
				<g:HTMLPanel styleName="{style.insetType}">
					<h1>Delete Project: <g:Label styleName="{style.inline}" ui:field="projectLabel"/></h1>
				</g:HTMLPanel>
			</g:HTMLPanel>
			<g:HTMLPanel styleName="{style.content}">
				<p><font size='4' color='red'>WARNING: This action is irreversible and will permanently delete all project related files and configurations.</font></p>
				<g:Button ui:field="deleteProjectButton" styleName="{style.destroyButton}">Destroy Project</g:Button>
			</g:HTMLPanel>
		</g:HTMLPanel>
	</g:SimplePanel>
</ui:UiBinder> 