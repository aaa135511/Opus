<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="../resources/ProjectBuilder.css" />
	<g:HTMLPanel styleName="{style.innerSubMainPanel}">
		<g:DockLayoutPanel unit='PCT' styleName="{style.topSubMainPanel}">
			<g:north size='6'>
				<g:FlowPanel>
					<g:Label  styleName="{style.pageTitle}">
						Delete Project
					</g:Label>
				</g:FlowPanel>
			</g:north>
			<g:west size='100'>
				<g:ScrollPanel ui:field="projectOptionsScrollPanel" styleName="{style.leftScrollPanel}">
					<g:DockLayoutPanel unit='EM' styleName="{style.form}">
						<g:north size='4'>
							<g:HTML>
								<font size='4' color='red'>WARNING: This action is irreversible and will permanently delete all project related files and configurations.</font>
							</g:HTML>
						</g:north>
						<g:north size='2'>
							<g:FlowPanel>
								<g:Button ui:field="deleteProjectButton" styleName="{style.searchButton}">Destroy Project</g:Button>
							</g:FlowPanel>
						</g:north>
					</g:DockLayoutPanel>
				</g:ScrollPanel>
			</g:west>
		</g:DockLayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder> 