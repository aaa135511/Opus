<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="../resources/ProjectBuilder.css"/>
	<g:HTMLPanel styleName="{style.innerSubMainPanel}">
		<g:DockLayoutPanel unit='PCT' styleName="{style.topSubMainPanel}">
			<g:north size='6'>
				<g:FlowPanel>
					<g:Label  styleName="{style.pageSteps}">
						Step 3 of 5:
					</g:Label>
					<g:Label  styleName="{style.pageTitle}">
						Database Options
					</g:Label>
				</g:FlowPanel>
			</g:north>
			<g:west size='75'>
				<g:ScrollPanel ui:field="databaseOptionsScrollPanel" styleName="{style.leftScrollPanel}">
					<g:DockLayoutPanel unit='EM' styleName="{style.form}">
						<g:north size ='2'>
							<g:HTML>
								<u>Database Options</u>
							</g:HTML>
						</g:north>
						<g:north size='2'>
							<g:FlowPanel>
								<g:Label styleName='{style.configParameter}'>DB Engine</g:Label>
								<g:ListBox name="dbengine" ui:field='dbengineListBox' styleName='{style.configParameter}'>
								</g:ListBox>
							</g:FlowPanel>
						</g:north>
						<g:north size ='10'>
							<g:DockLayoutPanel ui:field='dboptionsPanel' unit='EM'>
								<g:north size='2'>
									<g:FlowPanel>
										<g:Label styleName='{style.configParameter}'>Name</g:Label>
										<g:TextBox name="dbname" ui:field='nameTextBox' styleName='{style.configParameter}'/>
									</g:FlowPanel>
								</g:north>
								<g:north size='2'>
									<g:FlowPanel>
										<g:Label styleName='{style.configParameter}'>Password</g:Label>
										<g:PasswordTextBox name="dbpassword" ui:field='passwordTextBox' styleName='{style.configParameter}'/>
									</g:FlowPanel>
								</g:north>
								<g:north size='2'>
									<g:FlowPanel>
										<g:Label styleName='{style.configParameter}'>Host</g:Label>
										<g:TextBox name="dbhost" ui:field='hostTextBox' styleName='{style.configParameter}'/>
									</g:FlowPanel>
								</g:north>
								<g:north size='2'>
									<g:FlowPanel>
										<g:Label styleName='{style.configParameter}'>Port</g:Label>
										<g:TextBox name="dbport" ui:field='portTextBox' styleName='{style.configParameter}'/>
									</g:FlowPanel>
								</g:north>
							</g:DockLayoutPanel>
						</g:north>
					</g:DockLayoutPanel>	
				</g:ScrollPanel>
			</g:west>
			<g:east size='20'>
				<g:DockLayoutPanel styleName="{style.vertPanel}" unit='PCT'>
					<g:north size='90'>
						<g:ScrollPanel ui:field="deployListScrollPanel" styleName="{style.rightScrollPanel}">
							<g:FlowPanel>
							<g:HTML>
								<p>Name - Enter valid username for Database User</p>
								<p>Password - Creates a valid password for Database User</p>
								<p>Host - </p>
								<p>Port - </p>
							</g:HTML>
							</g:FlowPanel>
						</g:ScrollPanel>
					</g:north>
					<g:south size='8'>
						<g:DockLayoutPanel unit='PCT' styleName="{style.buttonPanel}">
							<g:west size='50'>
								<g:Button ui:field="previousButton" text="Previous" styleName="{style.stepsButton}"/>
							</g:west>
							<g:east size='45'>
								<g:Button ui:field="nextButton" text="Next" styleName="{style.stepsButton}"/>
							</g:east>
						</g:DockLayoutPanel>					</g:south>			
				</g:DockLayoutPanel>
			</g:east>
		</g:DockLayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder> 