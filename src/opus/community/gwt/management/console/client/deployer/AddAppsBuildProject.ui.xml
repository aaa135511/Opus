<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="../resources/ProjectBuilder.css"/>
	<g:HTMLPanel styleName="{style.innerSubMainPanel}">
		<g:DockLayoutPanel unit='PCT' styleName="{style.topSubMainPanel}">
			<g:north size='6'>
				<g:FlowPanel>
					<g:Label  styleName="{style.pageSteps}">
						Step 1 of 5:
					</g:Label>
					<g:Label  styleName="{style.pageTitle}">
						Add Applications
					</g:Label>
				</g:FlowPanel>
			</g:north>
			<g:west size='75'>
				<g:DockLayoutPanel unit='PCT'>
					<g:north size="8">
						<g:DockLayoutPanel unit='PCT' styleName="{style.searchPanel}">
							<g:west size="50">
								<g:HTMLPanel >
									<g:TextBox ui:field="searchBox" styleName="{style.searchBox}"></g:TextBox>
									<g:Button ui:field="searchButton" text="Search" styleName="{style.searchButton}" />
								</g:HTMLPanel>
							</g:west>
							<g:west size="25">
								<g:HTMLPanel styleName="">
									<!-- <g:Button text="Filter By" styleName="{style.searchButton}" /> -->
									<g:ListBox ui:field="fieldList" styleName="{style.listBox}"></g:ListBox>			
								</g:HTMLPanel>
							</g:west>
						</g:DockLayoutPanel>
					</g:north>
					<g:north size="92">
						<g:DockLayoutPanel unit='PCT'>
							<g:west size='80'>
								<g:ScrollPanel ui:field="appListScrollPanel" styleName="{style.leftScrollPanel}">
									<g:FlexTable ui:field="appListFlexTable" styleName="{style.flexTable}"></g:FlexTable>	
								</g:ScrollPanel>
							</g:west>
							<g:east size='20'>
								<g:DockLayoutPanel unit='PCT'> 
									<g:north size='90'>
										<g:ScrollPanel ui:field="deployListScrollPanel" styleName="{style.rightScrollPanel}">
											<g:FlexTable ui:field="deployListFlexTable"></g:FlexTable>
										</g:ScrollPanel>
									</g:north>
									<g:north size='10'>
										<g:Button ui:field="addOtherButton" text="Add Other Application" styleName="{style.stepsButton}"/>				
									</g:north>
								</g:DockLayoutPanel>
							</g:east>
						</g:DockLayoutPanel>
					</g:north>
				</g:DockLayoutPanel>
			</g:west>
			<g:east size='20'>
				<g:DockLayoutPanel styleName="{style.vertPanel}" unit='PCT'>
					<g:north size='90'>
						<g:ScrollPanel ui:field='infoScrollPanel' styleName="{style.rightScrollPanel}">
						</g:ScrollPanel>
					</g:north>
					<g:south size='8'>
						<g:DockLayoutPanel unit='PCT' styleName="{style.buttonPanel}">
							<g:east size='45'>
								<g:Button ui:field="nextButton" text="Next" styleName="{style.stepsButton}"/>
							</g:east>
						</g:DockLayoutPanel>
					</g:south>			
				</g:DockLayoutPanel>
			</g:east>
		</g:DockLayoutPanel>
	</g:HTMLPanel>			
</ui:UiBinder> 