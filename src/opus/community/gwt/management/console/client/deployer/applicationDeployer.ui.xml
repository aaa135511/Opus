<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="../resources/Deployer.css" type="opus.community.gwt.management.console.client.resources.Deployer.DeployerStyle"/>
	<g:RootLayoutPanel styleName="{style.mainPanel}">
		<g:layer>
			<g:HTML>
				<link href=' http://fonts.googleapis.com/css?family=Droid+Serif' rel='stylesheet' type='text/css'/>
			</g:HTML>
		</g:layer>
		<g:layer>
			<g:DockLayoutPanel ui:field='subMainPanel' styleName="{style.subMainPanel}" unit='PCT'>
				<g:north size='9'>
					<g:HTMLPanel styleName="{style.titleBar}"> 
					Deploy New Project
					</g:HTMLPanel>
				</g:north>
				<g:west size ='10.1'>
					<g:FlowPanel styleName="{style.navigationMenu}">
						<g:Label ui:field="addAppsLabel" styleName="{style.navigationLabel}">Step 1: Add Applications</g:Label>
						<g:Label ui:field="projectOptionsLabel" styleName="{style.navigationLabel}">Step 2: Project Options</g:Label>
						<g:Label ui:field="databaseOptionsLabel" styleName="{style.navigationLabel}">Step 3: Database Options</g:Label>
						<g:Label ui:field="deploymentOptionsLabel" styleName="{style.navigationLabel}">Step 4: Deployment Options</g:Label>
						<g:Label ui:field="confirmBPLabel" styleName="{style.navigationLabel}">Step 5: Confirm Selections</g:Label>
					</g:FlowPanel>
				</g:west>
				<g:east size='90'>	
					<g:DeckPanel ui:field="mainDeckPanel" styleName="{style.mainDeckPanel}">
					</g:DeckPanel>
				</g:east>		
			</g:DockLayoutPanel>
		</g:layer>
	</g:RootLayoutPanel>
</ui:UiBinder> 