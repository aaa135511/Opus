<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="../resources/ProjectBuilder.css"/>
	<g:HTMLPanel styleName="{style.innerSubMainPanel}">
		<g:DockLayoutPanel unit='PCT' styleName="{style.topSubMainPanel}">
			<g:north size='6'>
				<g:FlowPanel>
					<g:Label  styleName="{style.pageSteps}">
						Step 5 of 5:
					</g:Label>
					<g:Label  styleName="{style.pageTitle}">
						Confirm Selections
					</g:Label>
				</g:FlowPanel>
			</g:north>
			<g:west size='75'>
				<g:ScrollPanel ui:field="confirmationScrollPanel" styleName="{style.leftScrollPanel}">
				</g:ScrollPanel>
			</g:west>
			<g:east size='20'>
				<g:DockLayoutPanel styleName="{style.vertPanel}" unit='PCT'>
					<g:north size='90'>
						<g:ScrollPanel ui:field="deployListScrollPanel" styleName="{style.rightScrollPanel}">
							<g:FlowPanel>
							<g:HTML>
								<p>Please check all values to ensure correctness before submitting.</p>
							</g:HTML>
							</g:FlowPanel>
						</g:ScrollPanel>
					</g:north>
					<g:south size='8'>
						<g:DockLayoutPanel unit='PCT' styleName="{style.buttonPanel}">
							<g:west size='50'>
								<g:Button ui:field="previousButton" text="Previous" styleName="{style.stepsButton}"/>
							</g:west>
							<g:west size='50'>
								<g:Button ui:field="confirmButton" text="Confirm" styleName="{style.stepsButton}"/>
							</g:west>
						</g:DockLayoutPanel>
					</g:south>			
				</g:DockLayoutPanel>
			</g:east>
		</g:DockLayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder> 